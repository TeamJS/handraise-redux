<% unless @not_closed_issues.empty? %>
  <h1>My Open Issues</h1>

    <table class="table table-condensed" >
      <%= render 'issue_table_header' %>
      <tbody>
        <% @not_closed_issues.each do |issue| %>
          <%= render :partial => 'issue_table_rows', :locals => {:issue => issue} %>
        <% end %>
      </tbody>
    </table>

<% end %>

<% unless @closed_issues.empty? %>
  <h1>My Issue History</h1>

    <table class="table table-condensed" >
      <%= render 'issue_table_header' %>
      <tbody>
        <% @closed_issues.each do |issue| %>
          <%= render :partial => 'issue_table_rows', :locals => {:issue => issue} %>
        <% end %>
      </tbody>
    </table>

<% end %>